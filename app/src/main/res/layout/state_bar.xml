<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="15sp"
        android:text="name"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemon_name"
        android:layout_centerHorizontal="true"
        android:text="L: 7" />

    <TextView
        android:id="@+id/hp_empty"
        android:layout_width="65sp"
        android:layout_height="30sp"
        android:background="#d3d3d3"
        android:layout_below="@+id/level"
        android:layout_toEndOf="@+id/level" />
    <TextView
        android:layout_toLeftOf="@+id/hp_empty"
        android:id="@+id/hp_full"
        android:layout_width="75sp"
        android:layout_height="30sp"
        android:layout_below="@+id/level"
        android:layout_centerHorizontal="true"
        android:background="#526ef3"/>

    <TextView
        android:id="@+id/pokemon_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hp_empty"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="5sp"
        android:text="19/19" />
    <View
        android:id="@+id/bottom_view"
        android:layout_width="150sp"
        android:layout_height="1dp"
        android:layout_below="@+id/pokemon_hp"
        android:layout_centerHorizontal="true"
        android:background="#434343" />
